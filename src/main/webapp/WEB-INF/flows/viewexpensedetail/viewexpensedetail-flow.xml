<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_USER,ROLE_SUPERVISOR,ROLE_SITE_ADMIN" match="any"/>
	<!-- Attach a persistence context to this flow -->
	<persistence-context />
	<input name="toBeViewedExpenseId" required="false" />
	<on-start>
		<evaluate expression="userService.getUser(currentUser.name)" result="flowScope.etUser" />
	</on-start>
	
	<view-state id="expenseDetail" view="expenseDetail.xhtml" popup="true">
		<on-render>
			<evaluate expression="expenseService.getExpenseById(toBeViewedExpenseId)"
				result="viewScope.selectedExpense" />
				 
			<evaluate expression="selectedExpense.getUserShares()"
				result="viewScope.userShares" result-type="dataModel" />
			 
			<render fragments="expenseDetail" />
		</on-render>
		<transition on="ok" to="finish"/>
	</view-state>
	<end-state id="finish"/>
</flow>