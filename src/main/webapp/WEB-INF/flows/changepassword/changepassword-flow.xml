<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_USER,ROLE_SUPERVISOR,ROLE_SITE_ADMIN" match="any"/>
	<!-- Attach a persistence context to this flow -->
	<persistence-context />
	<var name="passwdChangeBean" class="com.exp.tracker.data.model.PasswordChangeBean"/>	
	<on-start>
		<evaluate expression="userService.getUser(currentUser.name)" result="flowScope.etUser" />
		<evaluate expression="userService.getUser(currentUser.name)" result="flowScope.currentUserBean" />	
	</on-start>
	<view-state id="changePasswordEntry" model="passwdChangeBean">
		<transition on="save" to="passwordChangeResults">			
		</transition>		
		<transition on="cancel" to="saveCancelled" bind="false">			
		</transition>
	</view-state>
	
	<view-state id="passwordChangeResults">
		<on-render>
			<evaluate expression="userService.changePassword(passwdChangeBean, currentUserBean)" result="flowScope.passwdChangeResult"/>
		</on-render>
		<transition on="ok" to="finish">
		</transition>
	</view-state>

	<end-state id="saveCancelled" />
	<end-state id="finish" commit="true" />
	
</flow>